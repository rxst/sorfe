{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es5",
    "types": [
      "node"
    ],
    "outDir": "./lib",
    "declaration": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "DOM",
      "esnext"
    ]
  },
  "include": [
    "source/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}